{
  "model": "claude-opus-4-1-20250805",
  "permissions": {
    "allow": [
      "Bash(git add:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] PreToolUse Write triggered\" >> ../.claude/hooks_debug.log 2>&1"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] PreToolUse Edit triggered\" >> ../.claude/hooks_debug.log 2>&1"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] PreToolUse MultiEdit triggered\" >> ../.claude/hooks_debug.log 2>&1"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ../.claude/hooks_debug.log ] && echo \"[$(date)] Stop hook triggered\" >> ../.claude/hooks_debug.log 2>&1 || true"
          },
          {
            "type": "command",
            "command": "[ -f ../.claude/hooks/session_end.py ] && python3 ../.claude/hooks/session_end.py 2>> ../.claude/hooks_debug.log || true",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
